.container
  h1 Latest Posts
  div.post(ng-repeat='post in posts')
    h2 {{post.title}}
    p {{post.text}}
    button.btn.btn-primary(ng-show='post.more == true',ng-click='showMore(post.id)') More
    a.btn.btn-primary(href='#/editPost/{{post.id}}') Edit
    button.btn.btn-danger(ng-click='deletePost(post.id)') Delete
